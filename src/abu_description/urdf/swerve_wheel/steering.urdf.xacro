<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="steering" params="side radius width pos_x pos_y pos_z mass">
        <link name="${side}_steering_link">
        <visual>
            <origin xyz="0 0 -0.044" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find abu_description)/urdf/model/rotation_wheel.dae" scale="1 1 1"/>
            </geometry>
            <material name="gray">
                <color rgba="0.123 0.114 0.119 0.8"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.0335" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${radius}" length="${width}"/>
                <!-- <mesh filename="file://$(find abu_description)/urdf/model/rotation_wheel.dae" scale="1 1 1"/> -->
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${mass}"/>
            <inertia ixx="${(2/5) * mass * (radius * radius)}" ixy="0" ixz="0"
                    iyy="${(2/5) * mass * (radius * radius)}" iyz="0"
                    izz="${(2/5) * mass * (radius * radius)}" />
        </inertial>
        </link>

        <gazebo reference="${side}_steering_link">
            <mu1>0.01</mu1>
            <mu2>0.01</mu2>
        </gazebo>

        <gazebo reference="${side}_steering_link">  
        <visual>  
            <material>
            <ambient>0.123 0.114 0.119 0.8</ambient>  
            <diffuse>0.123 0.114 0.119 0.8</diffuse>  
            <specular>0.123 0.114 0.119 0.8</specular>  
            <emissive>0.0 0.0 0.0 0.0</emissive>  
            </material>
        </visual>  
        </gazebo>
        <joint name="${side}_steering_joint" type="revolute">
        <axis xyz="0 0 1" />
        <parent link="base_link"/>
        <child link="${side}_steering_link"/>
        <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
        <limit lower="-${pi}" upper="${pi}" effort="-1" velocity="-1"/>
        </joint>
    </xacro:macro>
</robot>